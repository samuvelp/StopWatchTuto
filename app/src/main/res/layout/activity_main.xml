<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.stopwatchtuto.MainActivity">

    <TextView
        android:text="00:00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UI_TV_timer"
        android:textSize="50dp"
        android:textColor="#009688"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/UI_BTN_start"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="start"
        android:layout_below="@id/UI_TV_timer"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/UI_BTN_stop"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Stop"
        android:layout_below="@id/UI_BTN_start"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>
